<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="collection"
            type="com.example.nguyenthanhtungh.unsplashphoto.model.CollectionItem">

        </variable>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/collection_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_round_corner_button"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="@dimen/dp_200"
            android:maxLines="1"
            android:minWidth="@dimen/dp_56"
            android:padding="@dimen/dp_8"
            android:text="@{collection.title}"
            android:textColor="@android:color/white" />

    </FrameLayout>

</layout>
