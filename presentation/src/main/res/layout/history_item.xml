<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="history"
                  type="com.example.nguyenthanhtungh.unsplashphoto.model.HistoryItem">

        </variable>

    </data>

    <FrameLayout
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="@dimen/dp_56">

        <TextView
                android:id="@+id/collection_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:minWidth="@dimen/dp_56"
                android:padding="@dimen/dp_8"
                android:text="@{history.query}"
                android:gravity="center"
                android:maxLines="1"
                android:background="@drawable/ic_round_corner_button"
                android:textColor="@android:color/white"/>

    </FrameLayout>

</layout>
